<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE bibliography [
    <!ELEMENT bibliography (book | article)*>
    <!ELEMENT book (title, author+, tome+, edition)>
    <!ELEMENT article (title, author+, publication, opinion?)>
    <!ELEMENT title (#PCDATA)>
    <!ATTLIST title subtitle CDATA #IMPLIED>
    <!ELEMENT author (#PCDATA)>
    <!ELEMENT tome EMPTY>
    <!ATTLIST tome pages CDATA #REQUIRED>
    <!ATTLIST tome subtitle CDATA #IMPLIED>
    <!ELEMENT subtitle (#PCDATA)>
    <!ELEMENT pages (#PCDATA)>
    <!ELEMENT edition (editor, location, print, isbn)>
    <!ELEMENT editor (#PCDATA)>
    <!ELEMENT location (#PCDATA)>
    <!ELEMENT print (#PCDATA)>
    <!ELEMENT isbn (#PCDATA)>
    <!ELEMENT publication (journal, pages, number)>
    <!ELEMENT journal (#PCDATA)>
    <!ATTLIST journal journal_name CDATA "FleurdeChou">
    <!ELEMENT journal_name (#PCDATA)>
    <!ATTLIST publication year (2000 | 2001 | 2002 | before_2000 | unknow) "unknow">
    <!ELEMENT number (#PCDATA)>
    <!ELEMENT opinion (#PCDATA)>
]>
